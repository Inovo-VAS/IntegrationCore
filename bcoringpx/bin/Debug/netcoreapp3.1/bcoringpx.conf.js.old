<@  
	request.DBMS().RegisterDbConnection("messaging","SqlServer","Data Source=localhost;Initial Catalog=BCORING;User Id=BCORING;Password=bc@r1ng;MultipleActiveResultSets=true;");
	request.SMPP().SetSmppDbAlias("messaging",
	"SELECT MESSAGING.NAME,SMPPUNAME,SMPPPWORD,SMPPHOST,SMPPPORT,SMPPTYPE,SMSCNUMBER,CASE WHEN ENABLED='Y' THEN 1 ELSE 0 END ENABLED FROM BCORING.MESSAGINGCONFIG INNER JOIN BCORING.MESSAGING ON MESSAGINGCONFIG.MESSAGINGID=MESSAGING.ID AND CONFIGTYPE='SMPP'",
	"SELECT MESSAGING.NAME,MESSAGINGSEND.ID AS MESSAGEREFID,SENDER,RECEIVER,MESSAGE,STATUS FROM BCORING.MESSAGINGSEND INNER JOIN BCORING.MESSAGINGCONFIG ON MESSAGINGSEND.MESSAGINGCONFIGID=MESSAGINGCONFIG.ID AND STATUS='READY' INNER JOIN BCORING.MESSAGING ON MESSAGING.ID=MESSAGINGCONFIG.MESSAGINGID ORDER BY NAME,MESSAGINGSEND.ID",
	"EXECUTE BCORING.spMESSAGINGUPDATESENT ##MESSAGINGNAME##,##MESSAGEREFID##,##RECIPIENT##,##STATUS##",
	"EXECUTE BCORING.spMESSAGINGRECEIVED ##MESSAGINGNAME##,'',##RECEIVER##,##MESSAGE##");
